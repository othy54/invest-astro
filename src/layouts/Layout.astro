---
import "../styles/global.css";
import Header from "@components/Header.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		/>
		<link
			rel="preconnect"
			href="https://invest-astro.othman-bensaoula.com/"
		/>
		<slot name="head" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>Invest Astro</title>
		<meta
			name="description"
			content="Site Invest"
		/>
	</head>
	<body>
		<img
			width="99999"
			height="99999"
			style="pointer-events: none; position: absolute; top: 0; left: 0; width: 99vw; height: 99vh; max-width: 99vw; max-height: 99vh;"
			src="data:image/svg+xml;base64,"
			alt=""
		/>
		<Header />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
